<Project>
	<Target Name="RestoreNpmAssets">
		<Exec Command="npm install" />
	</Target>

	<PropertyGroup Label="Conditions">
		<IsTest>false</IsTest>
		<IsTest Condition="$(MSBuildProjectFullPath.ToLowerInvariant.Contains('tests')) OR MSBuildProjectName.ToLowerInvariant().EndsWith('tests')">true</IsTest>
	</PropertyGroup>

	<PropertyGroup Label="Package" Condition="$(IsTest)">
		<Nullable>disable</Nullable>
		<IsPackable>false</IsPackable>
		<PackAsTool>false</PackAsTool>
	</PropertyGroup>
</Project>
